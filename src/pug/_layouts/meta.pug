
// ========== OGP START ==========
meta(property="og:locale" content="ja_JP")
meta(property="og:type" content="website")
  
for k, v in pages
  if pageID == v
    if pageID == 'home'
      meta(property="og:title" content=siteName) 
    else
      meta(property="og:title" content=pages[v]['keyword'] + " | " + siteName) 
    meta(property="og:description" content=pages[v]['description']) 
      
meta(property="og:url" content=siteURL)
for k, v in pages
  if pageID == v
    if pageID == 'home'
      meta(property="og:site_name" content=siteName)
    else
      
      meta(property="og:site_name" content=pages[v]['keyword'] + " | " + siteName)
        
meta(property="og:image" content=facebook)
meta(property="og:image:secure_url" content=facebook)



// ========== TwitterTag START ==========
meta(name="twitter:card" content="summary_large_image")
for k, v in pages
  if pageID == v
    if pageID == 'home'
      meta(name="twitter:title" content=siteName)
    else
      meta(name="twitter:title" content=pages[v]['keyword'] + " | " + siteName)
    meta(name="twitter:description" content=pages[v]['description'])
        
meta(name="twitter:site" content=twitterID)
meta(name="twitter:image" content=twitter)
meta(name="twitter:creator" content=twitterID)
  
  
